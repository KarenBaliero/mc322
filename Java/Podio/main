public class Podio
{
    // arguments are passed using the text field below this editor
    public static void main(String[] args)
    {
        Leaderboard primeiros = new Leaderboard();
        Sintomas listas = new Sintomas();
        int vidas = 3;
        int pontos = 0;
        String nomeatual= "Joao";
        // após 5 jogadas entra no podio:
        for(int i = 0; i<5; i++){
            if(vida > 0){
                // sort na matriz puxa dados

                // mostra vários sintomas
                listas.mostrasintomas();
                // advinha qual é a doenca
                resposta = listas.advinhadoenca("Malaria");
                // se acertou soma pontos
                if(resposta == 0 ){
                    System.out.println("Puts voce errou e perdeu uma medica! Mas nao desista");
                    vidas--;
                }
                else {
                    System.out.println("Parabens voce acertou! Continue tentando");
                    pontos+=10;
                }

            }

        }
        primeiros.addPlayer(pontos, nomeatual);
        primeiros.showLeaders();

    }
}
