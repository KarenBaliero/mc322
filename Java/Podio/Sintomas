public class Sintomas{
    String linha[] = {"Malaria","dor de barriga", "dor de cabeca", "lingua amarela", "febre"};
    public Sintomas(){
    }
    
    public void mostrasintomas(){
        System.out.println("O seu paciente tem esses sintomas: ");
        for(int r=1; r < linha.length; r++){
            System.out.println(linha[r]);
        }
        System.out.println("Qual a doenca?");
    }
    
    public int advinhadoenca(String resposta){
        if(linha[0].equals(resposta)){
            return 1;
        }
        else 
            return 0;
        
    }
    
}
