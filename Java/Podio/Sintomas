public class Sintomas(){
    ArrayList<String> sintomas;
    public Sintomas(){
        sintomas = new ArrayList<String>;
    }
    
    public class void mostrasintomas(){
        System.out.println("O seu paciente tem esses sintomas: ");
        for(int r=1; r < sintomas.size();r++ ){
            System.out.println(sintomas.get(r));
        }
        
        System.out.println("Qual a doenca?");
        
    }
    
    public class int advinhadoenca(String resposta){
        if(sintomas.get(0).equals(resposta)){
            return 1;
        }
        else 
            return 0;
        
    }
    
}
